    <title>OSK</title>
</head>

<body class="wrapper">
    <header class="hero">
        <nav>
            {{#if loggedIn}}
            <a id="login" href="/">Home</a>
            <a id="login" href="/dashboard"> Solo Dash</a>
            <a id="logout" href="/login">Logout</a>
            {{else}}
            <a id="login" href="/login">Login</a>
            <a id="login" href="/signup">Sign-Up</a>
            {{/if}}
        </nav>
        <h1 class="app-title">
            <a class="page-title" id="dashboard-link" href="/"> Open Source Kanban </a>
        </h1>
        {{#if loggedIn}}
        <p>Click the button below to add your idea!</p>
        <form id="task-form">
            <div class="form-group">
                <input type="text" name="task-title" placeholder="Idea Title" />
            </div>
            <div class="form-group">
                <input type="text" name="task-content" placeholder="What Is Your Idea?" />
            </div>
            <div class="form-group">
                <button class="btn create-button" id="save-task" type="submit">Add Your Idea</button>
            </div>
        </form>
        {{else}}
        <p>Welcome to Open Source Kanban</p>
        {{/if}}
    </header>

    <main class="main">
        {{{ body }}}
    </main>
    <div class="footer-wrapper"></div>
    <footer>
        <div>
            <span>
                Â© Copyright - All rights reserved
            </span>
        </div>
        <div class="end">
        Thanks for visiting!

        </div>
        
    </footer>
    </div>
    {{#if loggedIn}}
    <script src="/javascript/logout.js"></script>
    {{/if}}
</body>

</html>